<div class="container">

    <div class="row">
        <% data.data.forEach(anime => { %>
            <div class="col-3">
                <div class="card m-1" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= anime.fact_id %></h5>
                        <p class="card-text"><%= anime.fact %></p>
                    </div>
                </div>
            </div>
        <% }) %> 
    </div>
</div>